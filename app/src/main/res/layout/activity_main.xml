<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.android.autogen.AuthenticationActivity">

    <Button
        android:id="@+id/basicstatsButton"
        android:text="Basic Show Stats"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showBasicStats"/>

    <Button
        android:id="@+id/statsPreviousButton"
        android:text="Show Previous Stats"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showPreviousStats"/>

    <Button
        android:id="@+id/OnOffButton"
        android:text="On-Off"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onoffButton"/>




</LinearLayout>
